@{
    ViewData["Title"] = "Admin Giriş";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/dashboard.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body class="login-body">
    <div class="login-container">
        <div class="login-wrapper">
            <!-- Left Side - Branding -->
            <div class="login-left">
                <div class="login-brand">
                    <div class="brand-icon">
                        <i class="bi bi-shield-check"></i>
                    </div>
                    <h1 class="brand-title">Admin Paneli</h1>
                    <p class="brand-subtitle">ISUBU Bilgisayar Mühendisliği<br />Dijital Bilgi Panosu Yönetimi</p>
                </div>
                <div class="login-features">
                    <div class="feature-item">
                        <i class="bi bi-play-circle"></i>
                        <span>Video Yönetimi</span>
                    </div>
                    <div class="feature-item">
                        <i class="bi bi-textarea-t"></i>
                        <span>Kayan Yazı Kontrolü</span>
                    </div>
                    <div class="feature-item">
                        <i class="bi bi-sliders"></i>
                        <span>Tam Kontrol</span>
                    </div>
                </div>
            </div>

            <!-- Right Side - Login Form -->
            <div class="login-right">
                <div class="login-card">
                    <div class="login-header">
                        <h2>Hoş Geldiniz</h2>
                        <p>Devam etmek için giriş yapın</p>
                    </div>

                    <form method="post" asp-controller="Admin" asp-action="Login" class="login-form">
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert-error">
                                <i class="bi bi-exclamation-circle-fill"></i>
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <span>@error.ErrorMessage</span>
                                }
                            </div>
                        }

                        <div class="form-group-login">
                            <label for="username">
                                <i class="bi bi-person"></i>
                                <span>Kullanıcı Adı</span>
                            </label>
                            <div class="input-wrapper">
                                <span class="input-icon-login">
                                    <i class="bi bi-person-fill"></i>
                                </span>
                                <input type="text" 
                                       id="username" 
                                       name="username" 
                                       class="input-login" 
                                       placeholder="Kullanıcı adınızı giriniz"
                                       required 
                                       autofocus />
                            </div>
                        </div>

                        <div class="form-group-login">
                            <label for="password">
                                <i class="bi bi-lock"></i>
                                <span>Şifre</span>
                            </label>
                            <div class="input-wrapper">
                                <span class="input-icon-login">
                                    <i class="bi bi-lock-fill"></i>
                                </span>
                                <input type="password" 
                                       id="password" 
                                       name="password" 
                                       class="input-login" 
                                       placeholder="Şifrenizi giriniz"
                                       required />
                            </div>
                        </div>

                        <button type="submit" class="btn-login">
                            <i class="bi bi-box-arrow-in-right"></i>
                            <span>Giriş Yap</span>
                        </button>
                    </form>

                    <div class="login-footer">
                        <p>© 2024 ISUBU Bilgisayar Mühendisliği</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


