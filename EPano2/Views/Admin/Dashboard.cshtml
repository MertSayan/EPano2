@model EPano2.Models.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard - ISUBU Bilgisayar Mühendisliği";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/dashboard.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="admin-container">
        <!-- Admin Header -->
        <div class="admin-header">
            <h1 class="admin-title">Admin Paneli</h1>
            <p class="admin-subtitle">ISUBU Bilgisayar Mühendisliği Dijital Bilgi Panosu Yönetimi</p>
        </div>

        <!-- Admin Navigation -->
        <nav class="admin-nav">
            <a href="@Url.Action("Dashboard", "Admin")" class="admin-nav-btn active">Dashboard</a>
            <a href="@Url.Action("Videos", "Admin")" class="admin-nav-btn">Videolar</a>
            <a href="@Url.Action("Announcements", "Admin")" class="admin-nav-btn">Duyurular</a>
            <a href="@Url.Action("Index", "Dashboard")" class="admin-nav-btn" target="_blank">Panoyu Görüntüle</a>
        </nav>

        <!-- Statistics Cards -->
        <div class="admin-stats">
            <div class="stat-card">
                <div class="stat-number">@ViewBag.TotalVideos</div>
                <div class="stat-label">Toplam Video</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">@ViewBag.TotalAnnouncements</div>
                <div class="stat-label">Toplam Duyuru</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">@ViewBag.ActiveVideos</div>
                <div class="stat-label">Aktif Video</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">@ViewBag.ActiveAnnouncements</div>
                <div class="stat-label">Aktif Duyuru</div>
            </div>
        </div>

        <!-- Dashboard Content -->
        <div class="admin-content">
            <div class="content-header">
                <h2 class="content-title">Video ve Kayan Yazı Ayarları</h2>
            </div>

            <div class="row">
                <div class="col-md-7">
                    <h4>Video Ayarları</h4>

                    <div class="mb-4">
                        <h5>Varsayılan Video Linki</h5>
                        <form asp-action="SaveDefaultVideo" method="post" class="row g-2">
                            <div class="col-12">
                                <input type="url"
                                       name="defaultVideoUrl"
                                       class="form-control"
                                       placeholder="https://www.youtube.com/watch?v=..."
                                       value="@Model.DefaultVideoUrl" />
                            </div>
                            <div class="col-6 mt-2">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="useDefault" value="true" id="useDefault"
                                           @(Model.IsDefaultActive ? "checked" : "") />
                                    <label class="form-check-label" for="useDefault">
                                        Varsayılan linki aktif et (ekstra linkler olsa bile sadece bu dönsün)
                                    </label>
                                </div>
                            </div>
                            <div class="col-6 text-end mt-2">
                                <button type="submit" class="btn btn-primary btn-sm">Kaydet</button>
                            </div>
                        </form>
                    </div>

                    <div class="mb-4">
                        <h5>Ekstra Video Linkleri (sırayla dönecek)</h5>

                        <form asp-action="AddExtraVideoLink" method="post" class="row g-2 mb-3">
                            <div class="col-9">
                                <input type="url"
                                       name="url"
                                       class="form-control"
                                       placeholder="Yeni video linki (YouTube URL)" />
                            </div>
                            <div class="col-3">
                                <input type="number"
                                       name="displayOrder"
                                       class="form-control"
                                       placeholder="Sıra" />
                            </div>
                            <div class="col-12 text-end mt-2">
                                <button type="submit" class="btn btn-success btn-sm">Ekle</button>
                            </div>
                        </form>

                        @if (Model.ExtraVideoLinks != null && Model.ExtraVideoLinks.Any())
                        {
                            <table class="table table-sm table-striped">
                                <thead>
                                    <tr>
                                        <th>URL</th>
                                        <th style="width:70px;">Sıra</th>
                                        <th style="width:80px;"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                @foreach (var link in Model.ExtraVideoLinks)
                                {
                                    <tr>
                                        <td>@link.Url</td>
                                        <td>@link.DisplayOrder</td>
                                        <td class="text-end">
                                            <form asp-action="DeleteExtraVideoLink" method="post">
                                                <input type="hidden" name="id" value="@link.Id" />
                                                <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <p class="text-muted">Henüz ekstra video linki eklenmemiş.</p>
                        }
                    </div>
                </div>

                <div class="col-md-5">
                    <h4>Kayan Yazı (Ticker) Ayarı</h4>
                    <form asp-action="SaveTickerConfig" method="post">
                        <div class="mb-3">
                            <label class="form-label">Özel Kayan Yazı Metni</label>
                            <textarea name="customText"
                                      rows="4"
                                      class="form-control"
                                      placeholder="Boş bırakırsanız API'den gelen duyuru ve haber başlıkları akmaya devam eder.">@Model.TickerCustomText</textarea>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" name="isActive" value="true" id="tickerActive" @(Model.TickerIsActive ? "checked" : "") />
                            <label class="form-check-label" for="tickerActive">
                                Aktif
                            </label>
                        </div>
                        <div class="text-end">
                            <button type="submit" class="btn btn-primary btn-sm">Kayan Yazıyı Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/dashboard.js"></script>
</body>
</html>


