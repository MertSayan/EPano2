@model EPano2.Models.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard - ISUBU Bilgisayar Mühendisliği";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/dashboard.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body class="admin-body">
    <div class="admin-wrapper">
        <!-- Sidebar -->
        <aside class="admin-sidebar">
            <div class="sidebar-header">
                <div class="sidebar-logo">
                    <i class="bi bi-shield-check"></i>
                    <span>Admin Panel</span>
                </div>
            </div>
            <nav class="sidebar-nav">
                <a href="@Url.Action("Dashboard", "Admin")" class="nav-item active">
                    <i class="bi bi-speedometer2"></i>
                    <span>Dashboard</span>
                </a>
                <a href="@Url.Action("Index", "Dashboard")" class="nav-item" target="_blank">
                    <i class="bi bi-display"></i>
                    <span>Panoyu Görüntüle</span>
                </a>
                <a href="@Url.Action("Logout", "Admin")" class="nav-item nav-item-logout">
                    <i class="bi bi-box-arrow-right"></i>
                    <span>Çıkış Yap</span>
                </a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="admin-main">
            <!-- Top Header -->
            <header class="admin-topbar">
                <div class="topbar-left">
                    <h1 class="page-title">Dashboard</h1>
                    <p class="page-subtitle">Dijital Bilgi Panosu Yönetimi</p>
                </div>
                <div class="topbar-right">
                    <a href="@Url.Action("Index", "Dashboard")" class="btn-view-board" target="_blank">
                        <i class="bi bi-eye"></i>
                        <span>Panoyu Görüntüle</span>
                    </a>
                </div>
            </header>

            <!-- Content Area -->
            <div class="admin-content-area">
                <!-- Video Management Card -->
                <div class="admin-card">
                    <div class="card-header">
                        <div class="card-header-left">
                            <i class="bi bi-play-circle"></i>
                            <h2>Video Yönetimi</h2>
                        </div>
                    </div>
                    <div class="card-body">
                        <!-- Default Video Section -->
                        <div class="section-block">
                            <div class="section-title">
                                <i class="bi bi-film"></i>
                                <span>Varsayılan Video</span>
                            </div>
                            @if (!string.IsNullOrWhiteSpace(Model.DefaultVideoFilePath))
                            {
                                <div class="info-box-modern" style="margin-bottom: 1rem;">
                                    <i class="bi bi-info-circle"></i>
                                    <span>Mevcut varsayılan video: <strong>@Model.DefaultVideoFilePath</strong></span>
                                </div>
                            }
                            <form asp-controller="Admin" asp-action="SaveDefaultVideo" method="post" enctype="multipart/form-data" class="modern-form">
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    <label>Video Dosyası Yükle</label>
                                    <div class="input-group">
                                        <span class="input-icon"><i class="bi bi-upload"></i></span>
                                        <input type="file"
                                               name="videoFile"
                                               class="form-control-modern"
                                               accept="video/mp4,video/webm,video/ogg,video/quicktime"
                                               required />
                                    </div>
                                    <small class="form-hint">Desteklenen formatlar: MP4, WebM, OGG, MOV. Varsayılan video aktif video yoksa sürekli oynatılacaktır.</small>
                                </div>
                                <button type="submit" class="btn-modern btn-primary-modern">
                                    <i class="bi bi-check-circle"></i>
                                    <span>Yükle ve Kaydet</span>
                                </button>
                            </form>
                        </div>

                        <!-- Extra Videos Section -->
                        <div class="section-block">
                            <div class="section-title">
                                <i class="bi bi-collection-play"></i>
                                <span>Ekstra Videolar</span>
                                <span class="badge-modern">@(Model.ExtraVideoLinks?.Count ?? 0)</span>
                            </div>
                            <form asp-controller="Admin" asp-action="AddExtraVideoLink" method="post" enctype="multipart/form-data" class="modern-form">
                                @Html.AntiForgeryToken()
                                <div class="form-row">
                                    <div class="form-group flex-grow">
                                        <label>Yeni Video Dosyası Yükle</label>
                                        <div class="input-group">
                                            <span class="input-icon"><i class="bi bi-upload"></i></span>
                                            <input type="file"
                                                   name="videoFile"
                                                   class="form-control-modern"
                                                   accept="video/mp4,video/webm,video/ogg,video/quicktime"
                                                   required />
                                        </div>
                                    </div>
                                    <div class="form-group" style="width: 120px;">
                                        <label>Sıra</label>
                                        <input type="number"
                                               name="displayOrder"
                                               class="form-control-modern"
                                               placeholder="1" />
                                    </div>
                                    <div class="form-group" style="width: auto; align-self: flex-end;">
                                        <button type="submit" class="btn-modern btn-success-modern">
                                            <i class="bi bi-plus-circle"></i>
                                            <span>Yükle</span>
                                        </button>
                                    </div>
                                </div>
                                <small class="form-hint">Desteklenen formatlar: MP4, WebM, OGG, MOV. Videolar sırayla oynatılacaktır.</small>
                            </form>

                            @if (Model.ExtraVideoLinks != null && Model.ExtraVideoLinks.Any())
                            {
                                <div class="table-modern-wrapper">
                                    <table class="table-modern">
                                        <thead>
                                            <tr>
                                                <th>Sıra</th>
                                                <th>Video Dosyası</th>
                                                <th>Durum</th>
                                                <th>İşlemler</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var link in Model.ExtraVideoLinks)
                                            {
                                                <tr>
                                                    <td><span class="badge-order">@link.DisplayOrder</span></td>
                                                    <td>
                                                        <div class="url-cell">
                                                            <i class="bi bi-file-play"></i>
                                                            <span>@link.FilePath</span>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <span class="badge-modern @(link.IsActive ? "bg-success" : "bg-secondary")">
                                                            @(link.IsActive ? "Aktif" : "Pasif")
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <form asp-action="UpdateExtraVideoLink" method="post" class="inline-form">
                                                            @Html.AntiForgeryToken()
                                                            <input type="hidden" name="id" value="@link.Id" />
                                                            <input type="hidden" name="isActive" value="@((!link.IsActive).ToString().ToLower())" />
                                                            <button type="submit" class="btn-icon @(link.IsActive ? "btn-icon-warning" : "btn-icon-success")" title="@(link.IsActive ? "Pasif Yap" : "Aktif Yap")">
                                                                <i class="bi bi-@(link.IsActive ? "pause" : "play")-circle"></i>
                                                            </button>
                                                        </form>
                                                        <form asp-action="DeleteExtraVideoLink" method="post" class="inline-form" style="display: inline;">
                                                            @Html.AntiForgeryToken()
                                                            <input type="hidden" name="id" value="@link.Id" />
                                                            <button type="submit" class="btn-icon-danger" onclick="return confirm('Bu videoyu silmek istediğinize emin misiniz?');" title="Sil">
                                                                <i class="bi bi-trash"></i>
                                                            </button>
                                                        </form>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="empty-state-modern">
                                    <i class="bi bi-inbox"></i>
                                    <p>Henüz ekstra video eklenmemiş.</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Ticker Management Card -->
                <div class="admin-card">
                    <div class="card-header">
                        <div class="card-header-left">
                            <i class="bi bi-textarea-t"></i>
                            <h2>Kayan Yazı Yönetimi</h2>
                        </div>
                    </div>
                    <div class="card-body">
                        <!-- Yeni Ticker Ekleme Formu -->
                        <div class="section-block">
                            <div class="section-title">
                                <i class="bi bi-plus-circle"></i>
                                <span>Yeni Ticker Yazısı Ekle</span>
                            </div>
                            <form asp-action="AddTickerItem" method="post" class="modern-form">
                                @Html.AntiForgeryToken()
                                <div class="form-row">
                                    <div class="form-group flex-grow">
                                        <label>Ticker Metni</label>
                                        <div class="input-group">
                                            <span class="input-icon"><i class="bi bi-chat-text"></i></span>
                                            <input type="text"
                                                   name="text"
                                                   class="form-control-modern"
                                                   placeholder="Örn: Ticker metni giriniz"
                                                   required />
                                        </div>
                                    </div>
                                    <div class="form-group" style="width: 120px;">
                                        <label>Sıra</label>
                                        <input type="number"
                                               name="displayOrder"
                                               class="form-control-modern"
                                               placeholder="1" />
                                    </div>
                                    <div class="form-group" style="width: auto; align-self: flex-end;">
                                        <button type="submit" class="btn-modern btn-success-modern">
                                            <i class="bi bi-plus-circle"></i>
                                            <span>Ekle</span>
                                        </button>
                                    </div>
                                </div>
                                <small class="form-hint">Aktif olan ticker yazıları kırmızı renkte ve kalın yazı tipiyle görüntülenecektir. API'den gelen duyurular yerine aktif ticker'lar gösterilir.</small>
                            </form>
                        </div>

                        <!-- Mevcut Ticker Listesi -->
                        <div class="section-block">
                            <div class="section-title">
                                <i class="bi bi-list-ul"></i>
                                <span>Mevcut Ticker Yazıları</span>
                                <span class="badge-modern">@(Model.TickerItems?.Count ?? 0)</span>
                            </div>

                            @if (Model.TickerItems != null && Model.TickerItems.Any())
                            {
                                <div class="table-modern-wrapper">
                                    <table class="table-modern">
                                        <thead>
                                            <tr>
                                                <th style="width: 60px;">Sıra</th>
                                                <th>Ticker Metni</th>
                                                <th style="width: 120px;">Durum</th>
                                                <th style="width: 100px;">İşlemler</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.TickerItems)
                                            {
                                                <tr>
                                                    <td><span class="badge-order">@item.DisplayOrder</span></td>
                                                    <td>
                                                        <div class="url-cell">
                                                            <i class="bi bi-text-left"></i>
                                                            <span>@item.Text</span>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <form asp-action="UpdateTickerItem" method="post" class="inline-form">
                                                            @Html.AntiForgeryToken()
                                                            <input type="hidden" name="id" value="@item.Id" />
                                                            <div class="checkbox-modern" style="margin: 0;">
                                                                <input type="checkbox" 
                                                                       name="isActive" 
                                                                       value="true" 
                                                                       id="ticker_@item.Id"
                                                                       @(item.IsActive ? "checked" : "")
                                                                       onchange="this.form.submit()" />
                                                                <label for="ticker_@item.Id">
                                                                    <span class="checkmark"></span>
                                                                    <span style="font-size: 0.85rem;">@(item.IsActive ? "Aktif" : "Pasif")</span>
                                                                </label>
                                                            </div>
                                                        </form>
                                                    </td>
                                                    <td>
                                                        <form asp-action="DeleteTickerItem" method="post" class="inline-form">
                                                            @Html.AntiForgeryToken()
                                                            <input type="hidden" name="id" value="@item.Id" />
                                                            <button type="submit" class="btn-icon-danger" onclick="return confirm('Bu ticker yazısını silmek istediğinize emin misiniz?');">
                                                                <i class="bi bi-trash"></i>
                                                            </button>
                                                        </form>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="empty-state-modern">
                                    <i class="bi bi-inbox"></i>
                                    <p>Henüz ticker yazısı eklenmemiş.</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="toast-notification toast-success">
            <i class="bi bi-check-circle-fill"></i>
            <span>@TempData["SuccessMessage"]</span>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="toast-notification toast-error">
            <i class="bi bi-exclamation-circle-fill"></i>
            <span>@TempData["ErrorMessage"]</span>
        </div>
    }

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Toast notification auto-hide
        setTimeout(function() {
            document.querySelectorAll('.toast-notification').forEach(function(toast) {
                toast.style.opacity = '0';
                setTimeout(function() { toast.remove(); }, 300);
            });
        }, 3000);

        // Form submit edildikten sonra input alanlarını temizle
        document.addEventListener('DOMContentLoaded', function() {
            // Ekstra Video Yükleme Formu
            const addVideoForm = document.querySelector('form[action*="AddExtraVideoLink"]');
            if (addVideoForm) {
                addVideoForm.addEventListener('submit', function() {
                    // Form submit edildikten hemen sonra input'ları temizle
                    setTimeout(function() {
                        const videoFileInput = addVideoForm.querySelector('input[name="videoFile"]');
                        const orderInput = addVideoForm.querySelector('input[name="displayOrder"]');
                        if (videoFileInput) videoFileInput.value = '';
                        if (orderInput) orderInput.value = '';
                    }, 50);
                });
            }

            // Varsayılan Video Yükleme Formu
            const saveDefaultVideoForm = document.querySelector('form[action*="SaveDefaultVideo"]');
            if (saveDefaultVideoForm) {
                saveDefaultVideoForm.addEventListener('submit', function() {
                    // Form submit edildikten hemen sonra input'ları temizle
                    setTimeout(function() {
                        const videoFileInput = saveDefaultVideoForm.querySelector('input[name="videoFile"]');
                        if (videoFileInput) videoFileInput.value = '';
                    }, 50);
                });
            }

            // Ticker Ekleme Formu
            const addTickerForm = document.querySelector('form[action*="AddTickerItem"]');
            if (addTickerForm) {
                addTickerForm.addEventListener('submit', function() {
                    // Form submit edildikten hemen sonra input'ları temizle
                    setTimeout(function() {
                        const textInput = addTickerForm.querySelector('input[name="text"]');
                        const orderInput = addTickerForm.querySelector('input[name="displayOrder"]');
                        if (textInput) textInput.value = '';
                        if (orderInput) orderInput.value = '';
                    }, 50);
                });
            }
        });
    </script>
</body>
</html>


