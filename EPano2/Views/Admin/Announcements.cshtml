@model List<EPano2.Models.Announcement>
@{
    ViewData["Title"] = "Duyuru Yönetimi - Admin Panel";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/dashboard.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="admin-container">
        <!-- Admin Header -->
        <div class="admin-header">
            <h1 class="admin-title">Duyuru Yönetimi</h1>
            <p class="admin-subtitle">Dijital bilgi panosunda gösterilecek duyuruları yönetin</p>
        </div>

        <!-- Admin Navigation -->
        <nav class="admin-nav">
            <a href="@Url.Action("Dashboard", "Admin")" class="admin-nav-btn">Dashboard</a>
            <a href="@Url.Action("Videos", "Admin")" class="admin-nav-btn">Videolar</a>
            <a href="@Url.Action("Announcements", "Admin")" class="admin-nav-btn active">Duyurular</a>
            <a href="@Url.Action("Index", "Dashboard")" class="admin-nav-btn" target="_blank">Panoyu Görüntüle</a>
        </nav>

        <!-- Announcements Content -->
        <div class="admin-content">
            <div class="content-header">
                <h2 class="content-title">Duyuru Listesi</h2>
                <button class="btn-primary btn-add" onclick="showModal('add')">Yeni Duyuru Ekle</button>
            </div>

            @if (Model.Any())
            {
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Başlık</th>
                            <th>İçerik</th>
                            <th>Oluşturma Tarihi</th>
                            <th>Bitiş Tarihi</th>
                            <th>Durum</th>
                            <th>Sıra</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var announcement in Model.OrderBy(a => a.DisplayOrder))
                        {
                            <tr>
                                <td>
                                    <strong>@announcement.Title</strong>
                                </td>
                                <td>
                                    @if (announcement.Content.Length > 100)
                                    {
                                        <span>@announcement.Content.Substring(0, 100)...</span>
                                    }
                                    else
                                    {
                                        <span>@announcement.Content</span>
                                    }
                                </td>
                                <td>@announcement.CreatedDate.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("tr-TR"))</td>
                                <td>
                                    @if (announcement.ExpiryDate.HasValue)
                                    {
                                        @announcement.ExpiryDate.Value.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("tr-TR"))
                                    }
                                    else
                                    {
                                        <span class="text-muted">Süresiz</span>
                                    }
                                </td>
                                <td>
                                    @if (announcement.IsActive)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Pasif</span>
                                    }
                                </td>
                                <td>@announcement.DisplayOrder</td>
                                <td>
                                    <button class="btn-secondary btn-edit" data-id="@announcement.Id">Düzenle</button>
                                    <button class="btn-danger btn-delete" data-id="@announcement.Id">Sil</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="empty-state">
                    <h3>Henüz duyuru eklenmemiş</h3>
                    <p>Dijital bilgi panosunda gösterilecek duyuruları eklemek için "Yeni Duyuru Ekle" butonuna tıklayın.</p>
                    <button class="btn-primary btn-add" onclick="showModal('add')">İlk Duyuruyu Ekle</button>
                </div>
            }
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/dashboard.js"></script>
    <script>
        // Initialize admin panel functionality
        document.addEventListener('DOMContentLoaded', function() {
            initializeAdminPanel();
        });
    </script>
</body>
</html>


