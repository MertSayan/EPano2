@model EPano2.Models.DashboardViewModel
@{
    ViewData["Title"] = "ISUBU Bilgisayar Mühendisliği - Dijital Bilgi Panosu";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/dashboard.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="dashboard-container">

        <!-- HEADER -->
        <header class="dashboard-header">
            <img class="header-logo-img" src="/image/logo2.jpg" alt="ISUBU Logo">
            <div class="header-title">ISUBU Bilgisayar Mühendisliği</div>
            <img class="header-logo-img" src="/image/logo2.jpg" alt="ISUBU Logo">
        </header>

        <!-- MAIN -->
        <main class="dashboard-main">

            <!-- LEFT COLUMN -->
            <div class="left-column">

                <!-- Video -->
                <section class="video-section fade-in">
                    <h2 class="video-title">Dönecek Olan Videolar</h2>
                    <div class="video-player">
                        <iframe class="youtube-frame"
                                src="https://www.youtube.com/embed/@ViewBag.PlaylistId?autoplay=1&mute=1&loop=1&playlist=@ViewBag.PlaylistId"
                                allow="autoplay; encrypted-media"
                                allowfullscreen>
                        </iframe>
                    </div>
                </section>

                <!-- Weather + Date -->
                <section class="info-wrapper">
                    <div class="weather-section fade-in">
                        <h3 class="weather-title">Günlük Hava Durumu</h3>
                        <div id="weatherToday" class="weather-today-content"></div>
                    </div>

                    <div class="datetime-section fade-in">
                        <h3 class="datetime-title">Tarih ve Saat</h3>
                        <div class="datetime-info" id="datetime-time">--:--:--</div>
                        <div class="datetime-date" id="datetime-date">--</div>
                    </div>
                </section>

            </div>

            <!-- RIGHT COLUMN -->
            <div class="right-column">

                <section class="announcements-section fade-in">
                    <h2 class="announcements-title">Duyurular - Haberler</h2>

                    <!-- SLIDER -->
                    <div class="announcements-carousel">
                        @* Render Announcements (haber=false) separately *@
                        @if (Model.Announcements.Any())
                        {
                            foreach (var ann in Model.Announcements.OrderBy(a => a.ID))
                            {
                                <div class="announcement-slide" data-haber="false" style="background-image:url('@ann.PosterImageUrl')">
                                    <div class="announcement-overlay">
                                        <h3 class="announcement-title">@ann.Title</h3>
                                        <p class="announcement-content">@ann.Content</p>
                                    </div>
                                </div>
                            }
                        }
                        
                        @* Render News (haber=true) separately *@
                        @if (Model.News.Any())
                        {
                            foreach (var news in Model.News.OrderBy(a => a.ID))
                            {
                                <div class="announcement-slide" data-haber="true" style="background-image:url('@news.PosterImageUrl')">
                                    <div class="announcement-overlay">
                                        <h3 class="announcement-title">@news.Title</h3>
                                        <p class="announcement-content">@news.Content</p>
                                    </div>
                                </div>
                            }
                        }
                        
                        @* Show empty state only if both lists are empty *@
                        @if (!Model.Announcements.Any() && !Model.News.Any())
                        {
                            <div class="announcement-slide active">
                                <div class="announcement-overlay">
                                    <h3 class="announcement-title">Duyuru Bulunamadı</h3>
                                </div>
                            </div>
                        }
                    </div>

                </section>

            </div>
        </main>

        <!-- FOOTER -->
        <footer class="dashboard-footer">
            <div class="scrolling-announcements">
                <div class="scrolling-text"></div>
            </div>
            <div class="scrolling-credits">
                <div class="scrolling-text-credits">
                    EMEĞİ GEÇENLER: Nahit Furkan ÖZNAMLI • Barış KÖSE • Muhammed Mert SAYAN
                </div>
            </div>
        </footer>
    </div>


    <!-- SCRIPTS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        async function loadWeatherToday() {
            try {
                const res = await fetch('/Home/Weather7');
                const data = await res.json();
                const box = document.getElementById('weatherToday');
                if (!data.length) {
                    box.innerHTML = '--°C';
                    return;
                }
                box.innerHTML = `
                    <img src="${data[0].iconUrl}" style="width:50px">
                    <span>${data[0].tempC}°C</span>
                `;
            } catch { }
        }
        loadWeatherToday();
    </script>

    <script src="~/js/dashboard.js"></script>
</body>
</html>
